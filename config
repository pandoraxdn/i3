# Add feh wallpaper
#exec_always --no-startup-id feh --bg-fill ~/Imágenes/wallpaper.png

#Press windows + x - check toolbar for next choices
bindsym $mod+X mode "$mode_system"

set $mode_system Sistema (b) bloquear, (c) cerrar-sesión, (s) suspender, (h) hibernar, (r) reiniciar, (a) apagar
mode "$mode_system" {
    bindsym b exec --no-startup-id ~/.config/i3/scripts/i3exit.sh lock, mode "default"
    bindsym c exec --no-startup-id ~/.config/i3/scripts/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/scripts/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/scripts/i3exit.sh reboot, mode "default"
    bindsym a exec --no-startup-id ~/.config/i3/scripts/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
